  CompiledObject: best
  MainIs: test_ppx.ml
  BuildTools: ppx_pendulum
  BuildDepends: ppx_pendulum,oUnit, pendulum

Executable test_lang_bin
  Build$: flag(tests)
  Path:	   tests/
  MainIs:  test_lang.ml
  CompiledObject: best
  Install: false
  BuildDepends:
    oUnit, pendulum
    
Test "test_pendulum"
  Run$:		flag(tests)
  Command: 	$test_lang_bin
  WorkingDirectory: tests
  
