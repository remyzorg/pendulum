  Path: src/core/
  Modules:
    Ast, Grc, Interp
  BuildDepends:
    ppx_deriving.std


Executable "main"
  Path:       src/
  MainIs:     main.ml
  CompiledObject: best
  BuildDepends:
    pendulum, unix
    
